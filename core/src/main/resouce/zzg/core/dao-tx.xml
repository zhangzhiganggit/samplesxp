	</bean>
	<bean id="bapTransactionManager"
		class="com.suixingpay.common.dao.mybatis.transaction.NamedDsTxManager">
		<property name="dataSource" ref="bapDataSource" />
	</bean>
	<bean id="oaTransactionManager"
		class="com.suixingpay.common.dao.mybatis.transaction.NamedDsTxManager">
		<property name="dataSource" ref="oaDataSource" />
	</bean>
	<bean id="uapTransactionManager"
		class="com.suixingpay.common.dao.mybatis.transaction.NamedDsTxManager">
		<property name="dataSource" ref="uapDataSource" />
