	</bean>
	<bean id="dcmTransactionManager"
		class="com.suixingpay.common.dao.mybatis.transaction.NamedDsTxManager">
		<property name="dataSource" ref="dcmDataSource" />
	</bean>
<bean id="sspTransactionManager"
		class="com.suixingpay.common.dao.mybatis.transaction.NamedDsTxManager">
		<property name="dataSource" ref="sspDataSource" />
	</bean>
<bean id="amsTransactionManager"
		class="com.suixingpay.common.dao.mybatis.transaction.NamedDsTxManager">
		<property name="dataSource" ref="amsDataSource" />
	</bean>
